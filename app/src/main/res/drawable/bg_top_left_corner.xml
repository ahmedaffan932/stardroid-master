<?xml version="1.0" encoding="UTF-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/gray_700"
    tools:targetApi="lollipop">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_700" />
            <!--            <corners android:radius="50dp"/>-->
        </shape>
    </item>
    <!--    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">-->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="@color/yellow"
                android:startColor="@color/light_yellow"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/fab_padding"
                android:bottomRightRadius="@dimen/fab_padding"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/fab_padding" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" />
            <corners
                android:bottomLeftRadius="@dimen/fab_padding"
                android:bottomRightRadius="@dimen/fab_padding"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/fab_padding" />
        </shape>
    </item>
    <!--    </layer-list>-->
</ripple>