<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="#FF70B5"
                android:endColor="#FEB39D"
                android:type="linear" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/fab_padding"
                android:bottomLeftRadius="@dimen/fab_padding"
                android:bottomRightRadius="@dimen/fab_padding"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#636998" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/fab_padding"
                android:bottomLeftRadius="@dimen/fab_padding"
                android:bottomRightRadius="@dimen/fab_padding"/>
        </shape>
    </item>

</layer-list>